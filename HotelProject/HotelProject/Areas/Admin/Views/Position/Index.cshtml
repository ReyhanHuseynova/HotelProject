@model List<Position>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div style="margin-top:40px" class="col-12">
    <div class="bg-light rounded h-100 p-4">
       
            <h6 class="mb-4">Position Table</h6>
            <a  asp-action="Create" class="btn btn-primary">Create</a>
      
       
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                       <td>
                            @if (item.IsDeactive)
                            {
                                <span class="text-danger">Passiv</span>
                            }
                            else
                            {
                                <span class="text-success">Activ</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Update" class="btn btn-warning" asp-route-id="@item.Id">Update</a>
                            @if (item.IsDeactive)
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Activate</a>
                            }
                            else
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-success">Deactivate</a>
                            }

                        </td>
                    </tr>
                }

                
            </tbody>
        </table>
    </div>
</div>