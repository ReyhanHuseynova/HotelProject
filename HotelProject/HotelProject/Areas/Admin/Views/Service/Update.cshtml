@model Service
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-top:40px;margin-left:30px" class="col-11">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Service Update</h6>
        <form method="post">
            <div class="mb-3">
                <label asp-for="ServiceTitle" class="form-label"></label>
                <input asp-for="ServiceTitle" class="form-control">
                <span asp-validation-for="ServiceTitle" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Icon" class="form-label"></label>
                <input asp-for="Icon" class="form-control">
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UpdateDate" class="form-label"></label>
                <input asp-for="UpdateDate" class="form-control">
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
