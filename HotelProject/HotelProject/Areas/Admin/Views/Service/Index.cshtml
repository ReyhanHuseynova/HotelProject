@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-top:40px" class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Service Table</h6>
        <a asp-action="Create" class="btn btn-primary">Create</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Service Title</th>
                    <th scope="col">Icon</th>
                    <th scope="col">Description</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.ServiceTitle</td>
                        <td>@item.Icon</td>
                        <td>@item.Description.Substring(0,item.Description.Length/4)</td>
                        <td>
                            @if (item.IsDeactive)
                            {
                                <span class="text-danger">Passiv</span>
                            }
                            else
                            {
                                <span class="text-success">Activ</span>
                            }

                        </td>
                        <td>
                            <div class="d-flex justify-content-end">


                                <div style="margin-right:5px">
                                    <a asp-action="Update" class="btn btn-secondary" asp-route-id="@item.Id">Update</a>

                                </div>
                               
                                    @if (item.IsDeactive)
                                    {
                                        <div>
                                        <a asp-action="Delete" class="btn btn-success" asp-route-id="@item.Id">Delete</a>

                                        </div>
                                    }
                                    else
                                    {
                                        <div>
                                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>

                                        </div>
                                    }
                              



                            </div>
                          

                        </td>
                    </tr>
                }
               
              
            </tbody>
        </table>
    </div>
</div>
