@model Team
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div style="margin-top:40px;margin-left:30px" class="col-11">
    <div class="bg-light rounded h-100 p-4">
        <div asp-validation-summary="All" class="text-danger"></div>
        <h6 class="mb-4">Team Create</h6>
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Photo" class="form-label"></label>
                <input accept="image/*" asp-for="Photo" class="form-control">
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input  asp-for="FullName" class="form-control">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="col-11">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">Select Social</h6>
                    <select class="form-select form-select-sm mb-3" aria-label=".form-select-sm example" name="socialId">
                        <option selected>Open this select menu</option>

                        @foreach (Social item in ViewBag.Social)
                        {
                            <option value="@item.Id">@item.Name</option>

                        }

                    </select>


                </div>
            </div>

            <div class="col-11">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">Select Position</h6>
                    <select class="form-select form-select-sm mb-3" aria-label=".form-select-sm example" name="posId">
                        <option selected>Open this select menu</option>

                        @foreach (Position item in ViewBag.Position)
                        {
                            <option value="@item.Id">@item.Name</option>

                        }
                     
                    </select>
                  
                   
                </div>
            </div>
         


            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>


